.personal-information {
    margin: 20px 0;
}
.personal-information .info-left {
    float: left;
    width: 210px;
}
/*左上  start*/
.personal-information .info-left .info-left-top {
    background-color: #ffffff;
}
.personal-information .info-left .info-left-top > i {
    display: inline-block;
    font-size: 40px;
    margin-left: 85px;
    margin-top: 30px;
    color: #999;
}
.personal-information .info-left .info-left-top > h5 {
    font-size: 16px;
    text-align: center;
    margin-top: 20px;
    color: rgb(0,0,0);
}
.personal-information .info-left .info-left-top > .login-time {
    font-size: 12px;
    text-align: center;
    margin-top: 10px;
    color: rgb(179, 179, 179);
}
.personal-information .info-left .info-left-top > .info-con {
    width: 180px;
    margin-left: 15px;
    margin-top: 30px;
    padding-bottom: 30px;
}
.personal-information .info-left .info-left-top > .info-con > .info-con-left {
    float: left;
    width: 90px;
    text-align: center;
    border-right: 1px solid rgb(179,179,179);
}
.personal-information .info-left .info-left-top > .info-con > .info-con-right {
    float: left;
    width: 88px;
    text-align: center;
}
.personal-information .info-left-top .info-con-left p {
    color: #b3b3b3;
    font-size: 12px;
}
.personal-information .info-left-top .info-con-left h5 {
    color: #666;
    font-size: 14px;
    font-weight: bold;
}
.personal-information .info-left-top .info-con-right p {
    color: #b3b3b3;
    font-size: 12px;
}
.personal-information .info-left-top .info-con-right h5 {
    color: #666;
    font-size: 14px;
    font-weight: bold;
}
/*左上  end*/
/*左下  start*/
.personal-information .info-left .info-left-bottom {
    background-color: #ffffff;
    margin-top: 10px;
}
.personal-information .info-left .info-left-bottom .info-content {
    height: 32px;
    padding: 11px 0;
    cursor: pointer;
}
.personal-information .info-left .info-left-bottom a:nth-child(2) {
    border-bottom: 1px solid #ededed;
}
.personal-information .info-left .info-left-bottom a:nth-child(4) {
    border-bottom: 1px solid #ededed;
}
.personal-information .info-left .info-left-bottom .info-content .info-con {
    padding-left: 25px;
    line-height: 32px;
}
.personal-information .info-left .info-left-bottom .info-content .info-con-select{
    border-left: 3px solid #29d9c2;
    padding-left:22px;
}
.personal-information .info-left .info-left-bottom a{
    width: 210px;
    height: 54px;
    background-color:#ffffff;
    display: block;
}
.personal-information .info-left .info-left-bottom a:hover{
    background-color:#29d9c2;
}
/*左下  end*/

/*右侧  start*/
.personal-information .info-right {
    width: 970px;
    float: right;
    background-color: #ffffff;
}
.personal-information .info-right .personal-info .personal-info-top {
    width: 970px;
    padding-top:18px;
    padding-bottom: 17px;
    padding-left: 30px;
    border-bottom: 1px solid #ededed;
    display: block;
}
.personal-information .info-right .personal-info .personal-info-top h4 {
    display: inline-block;
    font-size: 14px;
    color: #1a1a1a;
}

.personal-information .info-right .personal-info .message-content {
    padding-bottom: 30px;
    padding-left: 30px;
    padding-right: 30px;
}
.personal-information .info-right .personal-info .message-content textarea{
    width: 870px;
    height: 100px;
    border: 1px solid #dedede;
    background-color: #f5f5f5;
    margin-top: 20px;
    padding:20px;
    font-size: 14px;
    color: #292929;
}
.personal-information .info-right .personal-info .message-content .back-title{
    font-size: 14px;
    color: #292929;
    margin-top: 30px;
}
.personal-information .info-right .personal-info .message-content button {
    float: right;
    width: 120px;
    height: 36px;
    background-color: #29d9c2;
    color: #ffffff;
    margin-top: 20px;
    margin-bottom: 30px;
}

/*右侧  end*/


