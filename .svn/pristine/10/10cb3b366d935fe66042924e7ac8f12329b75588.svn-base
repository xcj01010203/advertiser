            var url = basePath + '/playRoundTmp/replaceContent';
            doPost(url, {idList: checkedArr}, function (data) {
                if (data.status == 0) {
                    modelWindow("剧本替换成功", 1000)

                    // 移除选中的checkbox
                    removeCheckedBox()

                    if (!$(".result-content .con .con-left .left-cb input")[0]) {

