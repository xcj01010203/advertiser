/*集次列表样式*/

/*表格表头样式  */
.panel > .table-bordered thead{
	background-color:#e9fbf9;
}
/*表格表头样式--end*/
.project-list ul li .project-list-li-manage{
    background-color: #29d9c2;
    color: #ffffff;
}

.project-list-five {
    width: 100%;
    background-color: #ffffff;
    padding: 20px 0 30px 0;
    border-top: 1px solid #ededed;
}
.project-list-five .five-content .five-content-gather {
    width: 100%;
}
.project-list-five .five-content .five-content-gather li {
    position: relative;
    display: inline-block;
    width: 102px;
    height: 32px;
    line-height: 32px;
    margin-right: 10px;
    text-align: center;
    margin-bottom: 10px;
    border: 1px solid #999999;
    font-size: 14px;
    color: rgb(51,51,51);
    float: left;
    cursor: pointer;
}
.project-list-five .five-content .five-content-gather li i {
    position: absolute;
    bottom: -13px;
    right: -4px;
    color: #ffffff;
    z-index: -1;
}
.project-list-five .five-content .five-content-gather li:hover {
    border: 1px solid #29d9c2;
    color: #29d9c2;
}
.project-list-five .five-content .five-content-gather li:hover i {
    color: #29d9c2;
    z-index: 0;
}
.project-list-five .five-content .five-content-gather li.active {
    border: 1px solid #29d9c2;
    color: #29d9c2;
}
.project-list-five .five-content .five-content-gather li.active i {
    color: #29d9c2;
    z-index: 0;
}


/*详情弹窗*/
.modal-title .series-round {
	-webkit-user-select:none;
    -moz-user-select:none;
    -ms-user-select:none;
    user-select:none;
}
.modal-title .series-round i{
    cursor: pointer;
    font-weight: bold;
}
.modal-title .series-round span {
	margin:0 20px;
}

/*剧本分析遮罩*/
.shade {
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
    z-index: -111;
}
.shade .shade-con {
    position: absolute;
    width: 1110px;
    height: 560px;
    left: 50%;
    margin-left: -555px;
    top: -500px;
    margin-top: 0;
    background-color: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 6px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
    overflow: auto;
    opacity: 0;
    z-index: -111;
}
.shade .shade-con .panel-heading h4 i {
    cursor: pointer;
}
.shade .shade-con .panel-body {
    background-color: red;
}